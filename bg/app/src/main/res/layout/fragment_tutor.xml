<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5EDDDDDD" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:background="@drawable/rb_filter_friend_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text=""
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_24" />

        <RadioButton
            android:id="@+id/rb_keep"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_20"
            android:background="@drawable/rb_filter_friend_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Aerobic"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_24" />

        <RadioButton
            android:id="@+id/rb_shape"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_20"
            android:background="@drawable/rb_filter_friend_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Shape"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_24" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5EDDDDDD" />

    <LinearLayout
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:background="@drawable/layout_mydialog_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_size_20"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_mao"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_size_15"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_26"
                    android:textColor="@color/color_0c"
                    android:text="boss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/color_0c"
                    android:text="No introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_course"
                android:layout_marginRight="@dimen/margin_size_10"
                android:drawableRight="@mipmap/icon_down"
                android:textStyle="bold"
                android:textColor="@color/color_0c"
                android:text="The courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom_container"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_marginRight="@dimen/margin_size_15"
                android:layout_marginLeft="@dimen/margin_size_15"
                android:background="#ddd"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_size_20"
                android:layout_marginLeft="@dimen/margin_size_15"
                android:layout_marginTop="@dimen/margin_size_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_yujia" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_size_15"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/text_size_26"
                        android:textColor="@color/color_0c"
                        android:text="Yoga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_size_5"
                        android:textSize="@dimen/text_size_28"
                        android:textColor="@color/color_0c"
                        android:text="ï¿¥799"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView

                    android:id="@+id/tv_yuyue"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:gravity="center"
                    android:background="@drawable/shape_ddd_25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Subscribe"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>