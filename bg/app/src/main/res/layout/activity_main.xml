<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f5"
    android:clipToPadding="false"

    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"></FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/module_color_fc"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="7dp">

        <RadioButton
            android:id="@+id/rb_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/rb_tab_home_bg"
            android:gravity="center"
            android:tag="rbTabMsg"
            android:text="Home"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_20" />

        <RadioButton
            android:id="@+id/rb_tab_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_tab_filter_bg"
            android:gravity="center"
            android:text="Book"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_20" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_tab_health"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_tab_health_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_20" />
        <RadioButton
            android:id="@+id/rb_tab_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_tab_mine_bg"
            android:gravity="center"
            android:text="VIP"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_20" />
    </RadioGroup>
</RelativeLayout>
