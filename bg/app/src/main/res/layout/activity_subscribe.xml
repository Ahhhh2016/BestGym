<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_15"
                android:layout_marginTop="@dimen/margin_size_15"
                android:layout_marginBottom="@dimen/margin_size_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_mydialog_style2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_yujia" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Boxing"
                            android:textColor="@color/color_0c" />

                        <TextView
                            android:id="@+id/tv_detail"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_f8_left_25dp"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:paddingBottom="@dimen/permission_dp_3"
                            android:text="view details"
                            android:textColor="@color/color_0c"
                            android:textSize="@dimen/text_size_20" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/margin_size_40"
                        android:text="￥499"
                        android:textColor="@color/color_0c"
                        android:textSize="@dimen/text_size_32"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#11000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="appointment time"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_type"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/btn_search_bg3"
                        android:paddingLeft="@dimen/margin_size_5"
                        android:paddingTop="2dp"
                        android:paddingRight="@dimen/margin_size_5"
                        android:paddingBottom="2dp"
                        android:text="10:00~11:00"
                        android:textColor="@color/color_0c"
                        android:textSize="@dimen/text_size_26"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_day_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_size_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#11000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IRemark"
                        android:textColor="@color/color_0c"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_current_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="/50"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/text_size_24" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Optional, please enter your other requirements..."
                    android:maxLength="50"
                    android:paddingLeft="@dimen/margin_size_10"
                    android:paddingTop="6dp"
                    android:textColor="#03081B"
                    android:textColorHint="#B0B2BF"
                    android:textSize="@dimen/text_size_22" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:background="#11000000"
                android:gravity="center_vertical|bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="15:00~16:00"
                            android:textSize="@dimen/text_size_22" />

                        <TextView
                            android:id="@+id/tv_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="3dp"
                            android:text="￥499"
                            android:textColor="@color/color_0c"
                            android:textSize="@dimen/text_size_32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_commit"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_ddd_25dp"
                        android:gravity="center"
                        android:text="Subscribe"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_26"></TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>