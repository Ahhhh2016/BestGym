<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_size_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.student.student_base_project.RoundedImage.RoundedImageView
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:id="@+id/banner_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/banner3"
            app:riv_corner_radius_bottom_left="5dp"
            app:riv_corner_radius_bottom_right="5dp"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp" />

        <LinearLayout

            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alias_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_2a"
                android:textSize="@dimen/text_size_30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:text=""
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:text="ï¿¥159.00"
                android:textColor="@color/redselect"
                android:textSize="@dimen/text_size_30"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_size_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_del"
                    android:layout_marginRight="@dimen/margin_size_15"
                    android:layout_gravity="right"
                    android:background="@drawable/tv_red_bg_filter_select"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Unsubscribe"
                    android:textColor="@color/color_0c"
                    android:textSize="@dimen/text_size_30"
                    android:textStyle="bold" />
                <TextView

                    android:id="@+id/tv_go_detail"
                    android:layout_marginRight="@dimen/margin_size_15"
                    android:layout_gravity="right"
                    android:background="@drawable/tv_red_bg"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_30"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>