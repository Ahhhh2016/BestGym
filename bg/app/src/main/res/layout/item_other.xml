<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@drawable/layout_mydialog_style"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.student.student_base_project.RoundedImage.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_qiche"
            android:layout_width="70dp"
            android:layout_height="70dp" />
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_type"
                    android:textStyle="bold"
                    android:textColor="@color/color_0c"
                    android:text="Bike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="@dimen/margin_size_10"
                    android:textSize="@dimen/text_size_24"
                    android:text="10:00 | 11:00 | ... | 21:00 |"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_marginTop="@dimen/margin_size_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        android:textStyle="bold"
                        android:text="ï¿¥599"
                        android:textColor="@color/color_0c"
                        android:textSize="@dimen/text_size_28"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_yuyue"
                        android:layout_marginRight="@dimen/dp_10"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:gravity="center"
                        android:background="@drawable/shape_ddd_25dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text=""
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>