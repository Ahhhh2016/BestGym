<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_30"
        android:gravity="center"
        android:text="Welcome to use~\nBestGymApp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="36dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textColor="@color/text_2a"
            android:textSize="@dimen/text_size_32"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_size_5"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Please enter Mobile"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/text_2a"
                android:textColorHint="#B7B7BD"
                android:textSize="13sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_25"
            android:text="Password"
            android:textColor="@color/text_2a"
            android:textSize="@dimen/text_size_32"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/login_pwd_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_size_5"
                android:layout_weight="1"
                android:background="@null"
                android:hint="enter password, the length is not less than 6 characters"
                android:inputType="textPassword"
                android:textColor="@color/text_2a"
                android:textColorHint="#B7B7BD"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_size_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User registration"
                android:textColor="@color/color_0c"
                android:textSize="@dimen/text_size_26" />

            <RadioGroup
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_stu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text=""
                    android:textSize="@dimen/text_size_24" />

                <RadioButton
                    android:id="@+id/radio_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:text=""
                    android:textSize="@dimen/text_size_24" />

                <RadioButton
                    android:id="@+id/radio_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:text=""
                    android:textSize="@dimen/text_size_24" />
            </RadioGroup>

            <TextView
                android:id="@+id/forget_pwd_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/text_size_26"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/margin_size_45"
            android:background="@drawable/tv_red_bg"
            android:gravity="center"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:autoLink="all"
            android:text="logging in, you have agree to the Service Agreement and Privacy Policy"
            android:textColor="@color/text_2a"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
</LinearLayout>