<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_limited"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_marginRight="@dimen/margin_size_15"
            android:background="@drawable/shape_red_corner_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_15"
                android:layout_marginTop="@dimen/margin_size_15"
                android:text="Limited number card"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_size_10"
                android:src="@mipmap/img_card" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_5"
            android:text="Limited number card"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_5"
            android:text="Bike"
            android:textColor="@color/text_66"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:text="ï¿¥499"
            android:textColor="@color/text_2a"
            android:textSize="@dimen/text_size_32"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:background="#5EDDDDDD"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

</LinearLayout>