<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_fff_top_25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_0c"
                android:textSize="@dimen/text_size_28"
                android:text="Course details"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_del"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/icon_deltel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <com.student.student_base_project.RoundedImage.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_marginRight="@dimen/margin_size_10"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:src="@mipmap/banner3"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginRight="@dimen/margin_size_10"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_28"
            android:text="boxing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginRight="@dimen/margin_size_10"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_5"
            android:textStyle="bold"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_32"
            android:text="ï¿¥499"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>

</LinearLayout>