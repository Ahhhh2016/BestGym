<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/color_0c"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_size_20"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#C8983F"
                    android:textSize="@dimen/text_size_28"
                    android:text="Dear customer friendï¼š"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#C8983F"
                    android:textSize="@dimen/text_size_28"
                    android:text="You currently have 0 membership benefits in our store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="@dimen/margin_size_40"
                android:src="@mipmap/icon_huangguang"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="98dp"
            android:background="@drawable/shape_fff_top_5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/margin_size_20"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_28"
                android:textColor="@color/color_0c"
                android:text="Card item rights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/icon_huiyuanquanyi"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/text_size_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="I have no equity~"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>