<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_mydialog_style"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_size_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="13dp"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:background="@drawable/tv_red_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_5"
            android:text="Card No"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:drawableRight="@mipmap/icon_right"
        android:id="@+id/et_card_no"
        android:inputType="number"
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="Please enter the card number"
        android:textColor="@color/color_0c"
        android:textColorHint="@color/text_d2"
        android:textSize="@dimen/text_size_24"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="13dp"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:background="@drawable/tv_red_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_5"
            android:text="Card Pwd"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/et_pwd"
        android:inputType="textPassword"
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="Please enter cami"
        android:textColor="@color/color_0c"
        android:textColorHint="@color/text_d2"
        android:textSize="@dimen/text_size_24"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_marginRight="@dimen/margin_size_15"
        android:layout_marginLeft="@dimen/margin_size_15"
        android:layout_marginTop="@dimen/margin_size_40"
        android:gravity="center"
        android:text="Confirm"
        android:textColor="@color/white"
        android:background="@drawable/shape_ddd_25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>