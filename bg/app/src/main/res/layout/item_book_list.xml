<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <com.student.student_base_project.RoundedImage.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_course"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp" />

        <TextView
            android:id="@+id/tv_type"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_32"
            android:layout_marginTop="@dimen/margin_size_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:text="Boxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="@dimen/margin_size_5"
            android:paddingLeft="@dimen/margin_size_5"
            android:background="@drawable/btn_search_bg2"
            android:layout_below="@id/tv_type"
            android:textSize="@dimen/text_size_26"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_0c"
            android:text="10:00~11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_time"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_32"
            android:layout_marginTop="@dimen/margin_size_90"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:text="ï¿¥499"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:background="@drawable/shape_ddd_left_25dp"
            android:layout_below="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_22"
            android:layout_marginTop="@dimen/margin_size_90"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:text=""
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_fff_bottom_5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/margin_size_20"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginBottom="@dimen/margin_size_20"
            android:clickable="false"
            android:focusable="false"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/common_progress_bar_green_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_0c"
            android:textSize="@dimen/text_size_26"
            android:text="Number of appointments0/1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        
    </LinearLayout>
    </LinearLayout>
</LinearLayout>