<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <LinearLayout

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/margin_size_50"
            android:src="@mipmap/duihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/margin_size_10"
            android:textSize="@dimen/text_size_48"
            android:gravity="center"
            android:textColor="@color/color_0c"
            android:textStyle="bold"
            android:text="Success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_yuyuema"
            android:layout_marginTop="@dimen/margin_size_5"
            android:textSize="@dimen/text_size_28"
            android:gravity="center"
            android:textColor="@color/color_0c"
            android:textStyle="bold"
            android:text="codeï¼š1324567489"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="@dimen/margin_size_15"
            android:src="@mipmap/erweima"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

    <LinearLayout
        android:elevation="2dp"
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="@dimen/margin_size_20"
        android:layout_marginTop="@dimen/margin_size_20"
        android:layout_marginRight="@dimen/margin_size_20"
        android:background="@drawable/layout_mydialog_style"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_size_20"
            android:paddingBottom="@dimen/margin_size_20"
            android:text="BESTGYM"
            android:textColor="@color/color_0c"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:elevation="2dp"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_20"
        android:layout_marginTop="@dimen/margin_size_20"
        android:layout_marginRight="@dimen/margin_size_20"
        android:background="@drawable/layout_mydialog_style"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Book Course" />

            <TextView
                android:id="@+id/tv_type"
                android:textSize="@dimen/text_size_24"

                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="Boxing"
                android:textColor="@color/color_0c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Book Time" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_24"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="2020.05.02"
                android:textColor="@color/color_0c" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Book Person" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="1"
                android:textSize="@dimen/text_size_24"

                android:textColor="@color/color_0c" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Mobile" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="15859632555"
                android:textSize="@dimen/text_size_24"

                android:textColor="@color/color_0c" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Payment method" />

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="15859632555"
                android:textColor="@color/color_0c" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/margin_size_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_marginTop="@dimen/margin_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Notes" />

            <TextView
                android:textSize="@dimen/text_size_24"
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_15"
                android:text="None"
                android:textColor="@color/color_0c" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>