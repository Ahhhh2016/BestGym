<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#5EDDDDDD"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RadioGroup
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_all"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rb_filter_friend_bg"
            android:checked="true"
            android:textSize="@dimen/text_size_24"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:button="@null"
            android:textColor="@drawable/rb_textcolor_bg"
            android:text="All"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_keep"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rb_filter_friend_bg"
            android:textColor="@drawable/rb_textcolor_bg"
            android:textSize="@dimen/text_size_24"
            android:layout_marginLeft="@dimen/margin_size_20"
            android:button="@null"
            android:text="Keep fit"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <View
        android:background="#5EDDDDDD"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>