<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <ImageView
        android:id="@+id/iv_flower"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_avatar"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_c9c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/margin_size_5"
        android:id="@+id/tv_report"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_2a"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>