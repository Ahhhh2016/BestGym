<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_0c"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/button_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/actionbar_icon_back"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/inqure_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:scaleType="centerInside"
            android:visibility="visible" />
        <LinearLayout
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/layout_avatar_container"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_oval_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/left_image2"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/title_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="16dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="58dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:visibility="visible" />
        <View
            android:id="@+id/msg_point"
            android:background="@drawable/shape_red_corner_15"
            android:layout_width="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_height="10dp"/>
    </RelativeLayout>
</LinearLayout>